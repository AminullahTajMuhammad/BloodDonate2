<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/profilePic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/four"
            android:layout_margin="10dp"/>

        <TextView android:id="@+id/tv_news_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/profilePic"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView android:id="@+id/tvUpdateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profilePic"
            android:layout_below="@+id/tv_news_Name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:text="16 mins ago"/>

        <TextView android:id="@+id/tv_news_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvUpdateTime"
            android:layout_below="@+id/tv_news_Name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Hyderabad"/>

        <ImageView android:id="@+id/imgImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/tvDescription"
            android:layout_margin="10dp"
            android:src="@drawable/picture_second"/>

        <ImageButton android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_thumb_up_black_24dp"
            android:background="@android:color/transparent"
            android:layout_below="@+id/imgImage"/>

        <ImageButton android:id="@+id/btnComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mode_comment_black_24dp"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:layout_below="@+id/imgImage"
            android:layout_toRightOf="@+id/btnLike"/>

        <TextView android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Hello World"
            android:layout_below="@+id/tv_news_City"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>