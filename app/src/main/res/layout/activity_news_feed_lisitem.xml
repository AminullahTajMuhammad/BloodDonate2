<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/profilePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/four"
        android:layout_margin="10dp"/>

    <TextView android:id="@+id/tv_news_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/profilePic"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView android:id="@+id/tvUpdateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profilePic"
        android:layout_below="@+id/tv_news_Name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="16 mins ago"/>

    <TextView android:id="@+id/tv_news_City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvUpdateTime"
        android:layout_below="@+id/tv_news_Name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Hyderabad"/>

    <ImageView android:id="@+id/imgImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/tv_news_City"
        android:layout_marginTop="10dp"
        android:src="@drawable/picture_one"/>

    <ImageButton android:id="@+id/btnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_thumb_up_black_24dp"
        android:layout_below="@+id/imgImage"/>

    <ImageButton android:id="@+id/btnComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>