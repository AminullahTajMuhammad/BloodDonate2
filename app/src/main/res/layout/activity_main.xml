<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MainActivity">

    <include layout="@layout/main_activity_toolbar"/>

    <ImageButton
        android:id="@+id/btnRequest"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/circle_layout"
        app:layout_constraintTop_toBottomOf="@+id/mainToolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_request_24dp"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/tvMakeRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make a Request"
        android:textColor="@color/colorLightAccent"
        android:textStyle="bold"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRequest"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btnSameDoner"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/circle_layout"
        app:layout_constraintTop_toBottomOf="@+id/mainToolbar"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_request_24dp"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/tvSameDoners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same Doners"
        android:textColor="@color/colorLightAccent"
        android:textStyle="bold"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSameDoner"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="55dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/circle_layout"
        android:src="@drawable/ic_account_circle_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Profile"
        android:textColor="@color/colorLightAccent"
        android:textStyle="bold"
        android:padding="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        android:layout_marginLeft="60dp"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/btnUserProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/circle_layout"
        android:src="@drawable/ic_account_circle_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/tvYourProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Profile"
        android:textColor="@color/colorLightAccent"
        android:textStyle="bold"
        android:padding="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUserProfile"
        android:layout_marginRight="55dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>