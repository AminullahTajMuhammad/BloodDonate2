<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="blooddonate.com.blooddonate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".screens.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".screens.Stepper" />
        <activity android:name=".screens.LoginScreen" />
        <activity android:name=".screens.BloodDetail" />
        <activity android:name=".dialogs.VerifyNumber" />
        <activity android:name=".screens.DialogScreen" />
        <activity android:name=".screens.BloodRequestScreen" />
        <activity android:name=".screens.ExploreDonerScreen" />
        <activity android:name=".screens.NewsFeedScreen" />
        <activity android:name=".adapters.NewsFeedAdapter" />
        <activity android:name=".screens.RequestScreen" />
        <activity android:name=".screens.ProfileCheckScreen"></activity>
    </application>

</manifest>