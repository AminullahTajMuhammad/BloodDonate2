<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="blooddonate.com.blooddonate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Stepper" />
        <activity android:name=".LoginScreen" />
        <activity android:name=".BloodDetail" />
        <activity android:name=".VerifyNumber" />
        <activity android:name=".DialogScreen" />
        <activity android:name=".BloodRequestScreen" />
        <activity android:name=".ExploreDonerScreen" />
        <activity android:name=".NewsFeedScreen" />
        <activity android:name=".NewsFeedAdapter"></activity>
    </application>

</manifest>